{
    "manifest_version": 3,
    "name": "YouTube Thumbnail Downloader",
    "version": "1.0",
    "description": "Download YouTube video thumbnails easily.",
    "permissions": [
        "activeTab",
        "downloads"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "action": {
        "default_popup": "popup.html"
    },
    "icons": {
        "16": "images/icon16.png",
        "48": "images/icon48.png",
        "128": "images/icon128.png"
    }
}